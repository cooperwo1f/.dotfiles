# Use v4 feature to stop i3 trying to run convert script
workspace_layout default

default_orientation horizontal

# Kill default Plasma Desktop
for_window [title="Desktop â€” Plasma"] kill; floating enable; border none

# Set the background
exec --no-startup-id feh --bg-scale /home/cooper/.local/share/wallpapers/Starry\ Nebula\ 219.png

# Remove the i3 bar
bar {
  mode hide
  hidden_state hide
  modifier none
}

# Start compositor
exec_always --no-startup-id picom -bc

# Remove window titlebars
for_window [class=".*"] border pixel 0
for_window [class=".*"] split toggle

# Plasma compatibility improvements
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

for_window [class="yakuake"] floating enable
for_window [class="plasmashell"] floating enable;
for_window [class="Plasma"] floating enable; border none
for_window [title="plasma-desktop"] floating enable; border none
for_window [title="win7"] floating enable; border none
for_window [class="krunner"] floating enable; border none; move center
for_window [class="Kmix"] floating enable; border none
for_window [class="Klipper"] floating enable; border none
for_window [class="Plasmoidviewer"] floating enable; border none
for_window [class="(?i)*nextcloud*"] floating disable
for_window [class="plasmashell" window_type="notification"] border none, move right 700px, move down 450px
no_focus [class="plasmashell" window_type="notification"]

# Use Plasma shutdown screen
bindsym $mod+Shift+e exec --no-startup-id qdbus org.kde.ksmserver /KSMServer org.kde.KSMServerInterface.logout -1 -1 -1

# Set font
font Hack:monospace 8

# Keybindings
set $Mod Mod4
set $Alt Mod1

bindsym $Mod+q split toggle; kill
bindsym $Alt+F4 split toggle; kill
bindsym $Mod+Shift+c reload
bindsym $Mod+Shift+r restart

# Change focus
bindsym $Alt+j focus up
bindsym $Alt+k focus down
bindsym $Alt+l focus right
bindsym $Alt+h focus left

# Move focused window
bindsym $Alt+Shift+j move up
bindsym $Alt+Shift+k move down
bindsym $Alt+Shift+l move right
bindsym $Alt+Shift+h move left

# Change focus (cursor keys)
bindsym $Alt+Down focus down
bindsym $Alt+Up focus up
bindsym $Alt+Left focus left
bindsym $Alt+Right focus right

# Move focused window (cursor keys)
bindsym $Alt+Shift+Down move down
bindsym $Alt+Shift+Up move up
bindsym $Alt+Shift+Left move left
bindsym $Alt+Shift+Right move right

# Change focus (cursor keys)
bindsym $Mod+Down focus down
bindsym $Mod+Up focus up
bindsym $Mod+Left focus left
bindsym $Mod+Right focus right

# Move focused window (cursor keys)
bindsym $Mod+Shift+Down move down
bindsym $Mod+Shift+Up move up
bindsym $Mod+Shift+Left move left
bindsym $Mod+Shift+Right move right

# Toggle fullscreen
bindsym $Mod+f fullscreen toggle

# Focus parent container
bindsym $Mod+a focus parent

# Focus child container
bindsym $Mod+d focus child

# Horizontal split
bindsym $Mod+h split h

# Verticle split
bindsym $Mod+v split v

# Workspaces
bindsym $Mod+1 workspace 1
bindsym $Mod+2 workspace 2
bindsym $Mod+3 workspace 3
bindsym $Mod+4 workspace 4
bindsym $Mod+5 workspace 5
bindsym $Mod+6 workspace 6
bindsym $Mod+7 workspace 7
bindsym $Mod+8 workspace 8
bindsym $Mod+9 workspace 9
bindsym $Mod+0 workspace 0

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Gaps
gaps inner 30
